.music-wrap .music-img {
  width: 100%;
  max-height: 800rpx;
  overflow: hidden;
}
.music-wrap .music-img .img {
  width: 100%;
  height: 800rpx;
}
.music-wrap .music-desc {
  padding: 0 60rpx;
}
.music-wrap .music-desc .music-title {
  font-size: 32rpx;
  color: var(--mainColor);
  text-align: center;
  line-height: 52rpx;
  font-family: aliM;
}
.music-wrap .bottom-music {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  position: fixed;
  bottom: 40rpx;
  width: 100%;
}
.music-wrap .bottom-music .control-btn {
  width: 100%;
  text-align: center;
  margin: 20rpx 0;
}
.music-wrap .bottom-music .control-btn .img {
  width: 100rpx;
  height: 100rpx;
}

