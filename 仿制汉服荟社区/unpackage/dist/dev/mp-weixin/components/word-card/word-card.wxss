.word-card .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: center;
  padding: 18rpx 24rpx;
}
.word-card .content {
  font-size: 28rpx;
